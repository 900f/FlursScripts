{
  "version": 2,
  "rewrites": [
    { "source": "/api/loader/:hash.lua", "destination": "/api/loader" },
    { "source": "/((?!api/).*)",          "destination": "/public/$1" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "X-Robots-Tag",  "value": "noindex, nofollow" },
        { "key": "Cache-Control", "value": "no-store" }
      ]
    }
  ]
}
